properties([parameters([choice(choices: ['All', 'Python', 'Bash', 'C'], description: 'You can choose language to run the script', name: 'Language')]), pipelineTriggers([pollSCM('* * * * * ')])])

pipeline {
  agent any

   stages {
      stage('Clone Sources') {
        steps {
          checkout scm
        } 
      }
      
      stage('C') {
         steps {
            echo 'picked $(param.Language)'                
            
         }
      }
      stage('Python') {
         steps {
            echo 'Execute python script'

            
         }
      }
      stage('Bash') {
         steps {
            echo 'bash script..'
         }
      }
      
   }
}
