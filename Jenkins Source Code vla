pipeline {
agent any 

   stages {
      stage('Clone Sources') {
        steps {
          checkout scm
        } 
      }
      stage('Execute C exe file') {
         steps {
            echo 'Compilation process..'
            sh '''
            '''
            sh '''
                echo "Running bin file"
                
            '''
         }
      }
      stage('Execute python script') {
         steps {
            echo 'Execute python script'
              sh '''
              chmod 755 ${WORKSPACE}/Python_Script.py
              ${WORKSPACE}/Python_Script.py $USER
              '''
         }
      }
      stage('Execute bash script') {
         steps {
            echo 'bash script..'
         }
      }
      
   }
}
